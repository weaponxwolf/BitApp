                              </div>
                              `);
                              $("#imagecarousel").html(``);

                              if (data.images) {
                                    $("#imagecarousel").append(`<div class="carousel-item active">
      <img class="d-block w-100" src="/clubs/tmp/${data.images[0]}" alt="First slide">
    </div>`);
                                    for (let i = 1; i < data.images.length; i++) {
                                          $("#imagecarousel").append(`<div class="carousel-item">
      <img class="d-block w-100" src="/clubs/tmp/${data.images[i]}" alt="First slide">
    </div>`);
                                    }
                                    $("#carouselExampleControls").append(` <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>`);
                              }


                        }
                  });
            }

            function insertAtCaret(areaId, text) {
                  var txtarea = document.getElementById(areaId);
                  if (!txtarea) {
                        return;
                  }

                  var scrollPos = txtarea.scrollTop;
                  var strPos = 0;
                  var br = ((txtarea.selectionStart || txtarea.selectionStart == '0') ?
                        "ff" : (document.selection ? "ie" : false));
                  if (br == "ie") {
                        txtarea.focus();
                        var range = document.selection.createRange();
                        range.moveStart('character', -txtarea.value.length);
                        strPos = range.text.length;
                  } else if (br == "ff") {
                        strPos = txtarea.selectionStart;
                  }

                  var front = (txtarea.value).substring(0, strPos);
                  var back = (txtarea.value).substring(strPos, txtarea.value.length);
                  txtarea.value = front + text + back;
                  strPos = strPos + text.length;
                  if (br == "ie") {
                        txtarea.focus();
                        var ieRange = document.selection.createRange();
                        ieRange.moveStart('character', -txtarea.value.length);
                        ieRange.moveStart('character', strPos);
                        ieRange.moveEnd('character', 0);
                        ieRange.select();
                  } else if (br == "ff") {
                        txtarea.selectionStart = strPos;
                        txtarea.selectionEnd = strPos;
                        txtarea.focus();
                  }

                  txtarea.scrollTop = scrollPos;
            }

            function insertLink() {
                  var s = $("#postbody").val();
                  v = ` __L(" link $ linkname ")L__ `;
                  insertAtCaret('postbody', v);
            }

            function insertHeading() {
                  var s = $("#postbody").val();
                  var x = $("#insertheading").val().replace('h', '');
                  if (x != '0') {
                        s = ` __H` + x + `("\n\n")` + x + `H__`;
                        insertAtCaret('postbody', s);
                  }

            }


            function fillinput(params) {
                  var locname = $("#" + params.id).html();
                  $('#location').val(locname);
                  $("#locid").val(params.id);
                  $("#locationslist").html("");
            }

            function listlocation(params) {
                  var eventloc = $("#location").val();
                  $.get('/club/locations/list?location=' + eventloc, function (data, status) {
                        $("#locationslist").html('');
                        data.forEach(element => {
                              $("#locationslist").append(
                                    `<li id='${element._id}' onclick="fillinput(this)" class="list-group-item">${element.name}</li>`
                              )
                        });
                        $("#locationslist").append(`<hr>`)
                  });
            }

            function getPosition(element) {
                  var xPosition = 0;
                  var yPosition = 0;

                  while (element) {
                        xPosition += (element.offsetLeft - element.scrollLeft + element.clientLeft);
                        yPosition += (element.offsetTop - element.scrollTop + element.clientTop);
                        element = element.offsetParent;
                  }
                  return {
                        x: xPosition,
                        y: yPosition
                  };
            }

            $(document).ready(function () {
                  var s = document.getElementById('mainpart');
                  var header = document.getElementById('header');
                  const vh = Math.max(document.documentElement.clientHeight || 0, window.innerHeight || 0)
                  document.getElementById("mainpart").style.height = vh - getPosition(s);
                  var clientHeight = document.getElementById('header').clientHeight;
                  var headerHeight = $('header').outerHeight();
                  document.getElementById("container").style.marginTop = getPosition(clientHeight);
            });
      </script>


