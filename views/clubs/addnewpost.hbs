      <script>
            function createPost() {
                  thetitle = $("#thefinaltitle").val();
                  thebody = $("#thefinalbody").val();
                  let elements = document.querySelectorAll('.carousel-item img');
                  var images=[];
                  for (let i = 0; i < elements.length; i++) {
                        images.push(elements[i].getAttribute('src'));
                  }
                  $.post('/club/posts/publish',{
                        title :thetitle,
                        body :thebody,
                        images : images
                  },(data,status)=>{
                        window.location.href="/club/posts/";
                  });
            }

            function addmoreImage() {
                  $("#imagestoupload").append(` <li class="list-group-item">
