                        enctype: 'multipart/form-data',
                        url: "/club/posts/createpreview",
                        data: data,
                        processData: false,
                        contentType: false,
                        cache: false,
                        timeout: 600000,
                        success: function (data, status) {
                              $("#thefinaltitle").val(data.thetitle);
                              $("#thefinalbody").val(data.thebody);
                              console.log(data.images);
                              $("#previewpost").append(` 
                              <div id="titlebox">
                                    <h3>
