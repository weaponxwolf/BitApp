      {{>scripts}}
      <script>
            function getPosition(element) {
                  var xPosition = 0;
                  var yPosition = 0;

                  while (element) {
                        xPosition += (element.offsetLeft - element.scrollLeft + element.clientLeft);
                        yPosition += (element.offsetTop - element.scrollTop + element.clientTop);
                        element = element.offsetParent;
                  }
                  return {
                        x: xPosition,
                        y: yPosition
                  };
            }

            $(document).ready(function () {
                  var s = document.getElementById('mainpart');
                  var header = document.getElementById('header');
                  const vh = Math.max(document.documentElement.clientHeight || 0, window
                        .innerHeight || 0)
                  document.getElementById("mainpart").style.height = vh - getPosition(s);
                  var clientHeight = document.getElementById('header').clientHeight;
                  var headerHeight = $('header').outerHeight();
                  document.getElementById("container").style.marginTop = getPosition(clientHeight);

                  $.get('/club/posts/list', function (data, status) {
                        console.log(data);
                        var sno = 1;
                        data.forEach(element => {
                              var getname = element.createdby.split(',')[0];
                              $("#postslist").append(`<tr>
                                                <th scope="row">${sno}</th>
                                                <td>${element.title}</td>
                                                <td>${getname}</td>
                                                <td>${element.createdon}</td>
                                                <td><button type="button" id="edit_${element._id}" class="btn btn-primary">Edit</button>
                                                <button type="button" id="delete_${element._id}" class="btn btn-danger">Delete</button></td>
                              </tr>`);
                              sno++;
                        });
                  });

            });
      </script>


